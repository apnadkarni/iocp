{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cd win && build.bat cdebug=\"-Zi -Od -DIOCP_DEBUG -DIOCP_ENABLE_TRACE -DIOCP_ENABLE_ASSERT\"",
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "cd win && build.bat clean",
            "problemMatcher": [],
            "group": "build"
        }
    ]
}